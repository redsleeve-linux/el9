 %define _lto_cflags -flto=thin
 # And disable LTO on AArch64 entirely.
-%ifarch aarch64
+%ifarch aarch64 %{arm}
 %define _lto_cflags %{nil}
 %endif
 
@@ -752,6 +754,9 @@ mv ./libclang-cpp.so.%{compat_maj_ver} "$compat_lib"
 
 %endif
